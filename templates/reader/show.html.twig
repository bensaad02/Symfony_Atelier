{% extends 'base.html.twig' %}

{% block title %}Reader Details: {{ reader.name }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title">Reader Details</h1>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Personal Information</h5>
                            <table class="table table-bordered">
                                <tr>
                                    <th>ID</th>
                                    <td>{{ reader.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ reader.name }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ reader.email }}</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Books Read</h5>
                            {% if reader.books|length > 0 %}
                                <div class="list-group">
                                    {% for book in reader.books %}
                                        <div class="list-group-item">
                                            <strong>{{ book.title }}</strong>
                                            <br>
                                            <small class="text-muted">
                                                Category: {{ book.category }} | 
                                                Published: {{ book.published ? 'Yes' : 'No' }}
                                            </small>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <div class="alert alert-info">
                                    This reader hasn't read any books yet.
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('app_reader_edit', {'id': reader.id}) }}" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="{{ path('app_reader_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}