{% extends 'base.html.twig' %}

{% block title %}Readers List{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Readers List</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="mb-3">
        <a href="{{ path('app_reader_new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Create New Reader
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Books Read</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for reader in readers %}
                    <tr>
                        <td>{{ reader.id }}</td>
                        <td>{{ reader.name }}</td>
                        <td>{{ reader.email }}</td>
                        <td>
                            {% if reader.books|length > 0 %}
                                {% for book in reader.books %}
                                    <span class="badge bg-primary mb-1">{{ book.title }}</span>
                                {% endfor %}
                            {% else %}
                                <span class="text-muted">No books</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('app_reader_show', {'id': reader.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Show
                                </a>
                                <a href="{{ path('app_reader_edit', {'id': reader.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form method="post" action="{{ path('app_reader_delete', {'id': reader.id}) }}" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this reader?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reader.id) }}">
                                    <button class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">No readers found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}