{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Book index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Published</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.published ? 'Yes' : 'No' }}</td>
                <td>
                    <span class="badge bg-{{ book.published ? 'success' : 'warning' }}">
                        {{ book.published ? 'Published' : 'Unpublished' }}
                    </span>
                </td>
                <td>
                    <a href="{{ path('app_book_show', {'id': book.id}) }}" class="btn btn-info btn-sm">Show</a>
                    <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    
                    {# FORMULAIRE POUR DELETE (POST) #}
                    <form method="post" action="{{ path('app_book_delete', {'id': book.id}) }}" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this book?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No books found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_book_new') }}" class="btn btn-success">Create new</a>
</div>
{% endblock %}