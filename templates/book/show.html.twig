{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Book</h1>
    
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Title of Book: {{ book.title }}</h5>
            {# Remove or replace the publicationDate line since it doesn't exist #}
            <p class="card-text"><strong>Reference:</strong> {{ book.ref }}</p>
            <p class="card-text"><strong>Author:</strong> {{ book.author ? book.author.username : '' }}</p>
            <p class="card-text"><strong>Category:</strong> {{ book.category }}</p>
            <p class="card-text">
                <strong>Published:</strong> 
                <span class="badge bg-{{ book.published ? 'success' : 'warning' }}">
                    {{ book.published ? 'Yes' : 'No' }}
                </span>
            </p>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_book_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn btn-warning">Edit</a>
    </div>
</div>
{% endblock %}